<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krlsystem.controller.AdminStationController">
   <children>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="idField" promptText="ID Stasiun (e.g. ST01)" />
            <TextField fx:id="nameField" promptText="Nama Stasiun" />
            <TextField fx:id="distanceField" promptText="Jarak (km)" />
            <Button onAction="#handleAdd" styleClass="btn-primary" text="Tambah" />
            <Label fx:id="statusLabel" />
         </children>
      </HBox>
      <TableView fx:id="stationTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="180.0" text="Nama" />
          <TableColumn fx:id="colDistance" prefWidth="100.0" text="Jarak (km)" />
          <TableColumn fx:id="colAction" prefWidth="180.0" text="Aksi" />
        </columns>
      </TableView>
   </children>
</VBox>
