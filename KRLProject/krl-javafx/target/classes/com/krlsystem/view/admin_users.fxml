<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krlsystem.controller.AdminUserController">
   <children>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="passwordField" promptText="Password" />
            <ComboBox fx:id="roleCombo" promptText="Role" />
            <TextField fx:id="balanceField" promptText="Saldo (Rp)" />
            <Button onAction="#handleSave" styleClass="btn-primary" text="Simpan" />
            <Button onAction="#handleCancel" styleClass="btn-secondary" text="Batal" />
            <Label fx:id="statusLabel" />
         </children>
      </HBox>
      <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
         <columns>
           <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
           <TableColumn fx:id="colUsername" prefWidth="180.0" text="Username" />
           <TableColumn fx:id="colRole" prefWidth="100.0" text="Role" />
           <TableColumn fx:id="colBalance" prefWidth="120.0" text="Saldo" />
           <TableColumn fx:id="colAction" prefWidth="180.0" text="Aksi" />
         </columns>
      </TableView>
   </children>
</VBox>
