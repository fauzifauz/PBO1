<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<HBox prefHeight="600.0" prefWidth="1000.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krlsystem.controller.PassengerController">
   <children>
      <!-- Sidebar -->
      <VBox prefWidth="250.0" styleClass="sidebar">
         <children>
            <VBox alignment="CENTER" prefHeight="150.0" spacing="10.0">
               <children>
                  <FontIcon iconLiteral="fas-user-circle" iconSize="48" iconColor="white"/>
                  <Text fx:id="usernameText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="USER NAME">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="sidebarBalanceLabel" text="Saldo: Rp 0" textFill="WHITE" />
               </children>
            </VBox>
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showDashboard" styleClass="nav-button" text=" Booking Tiket">
                     <graphic>
                        <FontIcon iconLiteral="fas-ticket-alt" iconColor="white"/>
                     </graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showHistory" styleClass="nav-button" text=" Riwayat Perjalanan">
                     <graphic>
                        <FontIcon iconLiteral="fas-history" iconColor="white"/>
                     </graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showTopUp" styleClass="nav-button" text=" Top Up Saldo">
                     <graphic>
                        <FontIcon iconLiteral="fas-wallet" iconColor="white"/>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" styleClass="nav-button" text=" Logout">
               <graphic>
                  <FontIcon iconLiteral="fas-sign-out-alt" iconColor="white"/>
               </graphic>
            </Button>
         </children>
      </VBox>
      
      <!-- Main Content -->
      <VBox styleClass="main-bg" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: white; -fx-padding: 0 20;">
               <children>
                  <Label fx:id="viewTitle" styleClass="header-text" text="Booking Tiket" />
               </children>
            </HBox>
            <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Content will be swapped here -->
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</HBox>
