<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox spacing="20.0" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krlsystem.controller.AdminDashboardController">
   <children>
      <FlowPane hgap="20.0" vgap="20.0">
         <children>
            <VBox prefWidth="200.0" styleClass="stat-card">
               <children>
                  <Text text="Total Pendapatan" />
                  <Label fx:id="revenueLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Rp 0" />
               </children>
            </VBox>
            <VBox prefWidth="200.0" styleClass="stat-card">
               <children>
                  <Text text="Total Penumpang" />
                  <Label fx:id="userCountLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" text="0" />
               </children>
            </VBox>
            <VBox prefWidth="200.0" styleClass="stat-card">
               <children>
                  <Text text="Total Stasiun" />
                  <Label fx:id="stationCountLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" text="0" />
               </children>
            </VBox>
         </children>
      </FlowPane>
   </children>
</VBox>
